{{#if success_msg}}
<div class="w-100 d-flex justify-content-end">
    <div class="alert alert-success w-25 text-center m-1 alert-dismissible fade show d-flex align-items-center justify-content-between" id="success_msg">


        <div class="d-flex align-items-center w-80" style="margin-left: 4% !important">
            <p>{{success_msg}}</p>
        </div>
        <div class="d-flex w-20">
            <button type="button" class="close btn" data-dismiss="alert" aria-label="Close" style="margin-left:2% !important">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>
{{/if}}
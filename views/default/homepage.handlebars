<div class="w-100 d-flex">


</div>



{{else}}

<div class="w-100 d-flex">
    <div class="d-flex justify-content-center align-items-center h-100 w-25 d-flex flex-column"
        style="min-height: 90vh;height:100vh; max-width: 100vw; background-color: #ececec;">
        <div class="w-100 h-100 bg-dark p-3">

            <h6><i class="bi bi-globe-americas"></i> Região (ajeitar back-end)</h6>
        </div>
        <div class="card-body w-100 bg-primary">
            <ul class="list-group">
                <li>Ferramentas do técnico</li>
            </ul>

        </div>
    </div>
    <div class="d-flex justify-content-center align-items-start w-50"
        style="min-height: 90vh !important; max-height:90vh !important;height:90vh; max-width: 100vw; background-color: #f76d6d;">
        <div class="w-75 p-3">
            <div class="card w-100" style="max-height: 80vh !important;">

                <div class="card-header">
                    <h5 class="card-title">Criar Novo Serviço</h5>
                </div>
                <div class="card-body h-100">

                    <div class="w-100 bg-primary d-flex justify-content-center align-items-center"
                        style="height: 10vh;">
                        <a href="/criarServico"><button class="btn btn-light btn-sm"><i class="bi bi-plus-circle"></i>
                                Criar Serviço </button></a>
                    </div>

                </div>
            </div>

        </div>

    </div>

    <div class="d-flex justify-content-center align-items-center h-100 w-25 flex-column"
        style="min-height: 90vh; max-width: 100vw; background-color: #e3cbcb;">
        {{#each serviceData}}
        <div class="card">

            <p>Nome do Serviço: {{dataValues.nomedoServico}}</p>
            <p>Descrição: {{dataValues.descricao}}</p>
            <p>Categoria: {{dataValues.categoria}}</p>
            <p>Contratante: {{dataValues.contratante}}</p>
            <p>Valor: {{dataValues.valor}}</p>

        </div>
        {{/each}}
    </div>
</div>


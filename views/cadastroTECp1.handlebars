<div class="d-flex justify-content-center align-items-center h-100 w-100" style="height: 91vh !important;">
    <div class="card w-50 d-flex justify-content-center align-items-center" id="cardf" style="background-color: rgb(239, 186, 41);" style="width: 60% !important;">

        <div class="card-body w-75">
            <div class="d-flex flex-column align-items-center justify-content-center">
                <h2 class="card-title d-flex justify-content-center">SecurityWork</h2>
                <h6 class="card-title">(Cadastro Técnico)</h6>
            </div>
            <br>
            <form>
                <div class="form-row d-flex flex-wrap justify-content-between">
                    <div class="form-group col-md-5">
                        <label for="inputUser">Usuário</label>
                        <input type="text" class="form-control" id="inputUser" placeholder="Usuário">
                    </div>
                    <div class="form-group col-md-6 inputC" style="width: 55%;">
                        <label for="inputEmail4">E-mail</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="E-mail">
                    </div>
                    <div class="form-group col-md-7">
                        <label for="inputPassword4">Senha</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Senha"
                            style="width: 95% !important;">
                    </div>

                    <div class="form-group col-md-5">
                        <label for="inputAddress">CEP</label>
                        <input type="text" class="form-control" id="inputCEP" placeholder="CEP" maxlength="9"
                            onkeyup="handleZipCode(event)">
                    </div>
                </div>
                <div class="form-row d-flex flex-wrap justify-content-between">

                    <div class="form-group col-md-6">
                        <label for="inputAddress2">CPF</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="123.456.789-10"
                            maxlength="11">
                    </div>
                    <div class="form-group col-md-5 inputC" style="width: 47%;">
                        <label for="inputAddress2">Nº Telefone</label>
                        <input type="text" class="form-control " id="inputAddress2" placeholder="(DDD) 9-0000-0000">
                    </div>


                    <div class="form-group col-md-12 ">
                        <label for="inputAddress2">Endereço</label>
                        <input type="text" class="form-control" id="inputAddress2"
                            placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-group col-md-5 inputC inC">
                        <label for="inputCity">Cidade</label>
                        <input type="text" class="form-control" id="inputCity" placeholder="Cidade">
                    </div>
                    <div class="form-group col-md-5 inC inputC" style="margin-left: 3%;">
                        <label for="inputState">Estado</label>
                        <select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                </div>
                <a href="#" class="card-link text-primary">Esqueci a senha</a>
                <br>
                <br>
                <button type="submit" class="btn text-white" style="background-color: #003C5F;">Registrar</button>
            </form>




        </div>
    </div>
</div>





<script>

    const handleZipCode = (event) => {
        let input = event.target
        input.value = zipCodeMask(input.value)
    }

    const zipCodeMask = (value) => {
        if (!value) return ""
        value = value.replace(/\D/g, '')
        value = value.replace(/(\d{5})(\d)/, '$1-$2')
        return value
    }

</script>
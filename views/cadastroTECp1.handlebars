<div class="d-flex flex-row">
    <div class="d-flex justify-content-center align-items-center w-50" style="height: 90vh !important;">
        <div class="w-100 h-100"
            style="background-image: url(/images/SSTWpp.jpg); background-size: cover;  background-position: 90%  !important;"
            id="background-img">

            <div class="d-flex flex-column align-items-center justify-content-center h-25">
                <h1 class="card-title d-flex justify-content-center text-white display-3 font-weight-normal m-0">
                    TeConnect</h1>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center h-100 w-50">
        <div class="card w-100 d-flex justify-content-center align-items-center p-0" id="cardf"
            style="background-color: #F2F9FF; min-height: 90vh !important; ">
            <div class="card-header w-100 text-center">
                <h2 class="m-0">Formulário do técnico</h2>
            </div>
            <div class="card-body w-75">

                <form action="/tec/cadastro" method="post">
                    <div class="form-row d-flex flex-wrap justify-content-between ">
                        <div class="form-group col-md-6 m-0">
                            <label for="inputUser">Usuário</label>
                            <input type="text" class="form-control" id="inputUser" placeholder="Usuário" name="user"
                                required>
                        </div>
                        <div class="form-group col-md-6 inputC" style="width: 55%;">
                            <label for="inputEmail4">E-mail</label>
                            <input type="email" class="form-control input-sm" id="inputEmail4 " placeholder="E-mail"
                                name="email" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Senha</label>
                            <input type="password" class="form-control input-group-sm" id="senha" placeholder="Senha"
                                name="senha" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="confirmPassword4">Confirmar Senha</label>
                            <input type="password" class="form-control" id="senhaC" placeholder="Confirmar Senha"
                                style="width: 95% !important;" name="senhaC" required>
                            <span id="senhaMatch" class="text-success"></span>
                        </div>
                    </div>
                    <div class="form-row d-flex flex-wrap justify-content-between">

                        <div class="form-group col-md-6">
                            <label for="inputAddress2">CPF</label>
                            <input type="text" class="form-control" id="RegraValida" value="" name="RegraValida"
                                onkeydown="javascript: fMasc( this, mCPF );" placeholder="000.000.000-00" maxlength="14"
                                required>
                        </div>
                        <div class="form-group col-md-6 inputC" style="width: 50%;">
                            <label for="inputAddress2">Nº Telefone</label>

                            <input type="tel" maxlength="15" class="form-control" onkeyup="handlePhone(event)"
                                id="inputAdress2" placeholder="(00) 00000-0000" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cepx">Cep:
                                <input name="cep" class="form-control" type="text" id="cep" value=""
                                    maxlength="9" onblur="pesquisacep(this.value) "
                                    onkeyup="handleZipCode(event)" /></label>
                        </div>
                        <div class="form-group col-md-8">
                            <label for="rua">Endereço:
                                <input name="rua" class="form-control" type="text" id="rua" size="60" /></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="bairro">Bairro:
                                <input name="bairro" class="form-control" type="text" id="bairro" /></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cidade">Cidade:
                                <input name="cidade" class="form-control" type="text" id="cidade" /></label>
                        </div>
                        <div class="form-group col-md-4">
                            Estado:
                            <input name="uf" type="text" id="uf" size="2" class="form-control" />
                        </div>
                    </div>
<br>
                    <button type="submit" class="btn text-white w-100" style="background-color: #003C5F;"
                        onclick="return validarSenha();">Registrar</button>
                </form>
                <br>
                <a href="#" class="card-link text-primary">Esqueci a senha</a>

            </div>
        </div>
    </div>
</div>

<script>

    const handleZipCode = (event) => {
        let input = event.target
        input.value = zipCodeMask(input.value)
    }

    const zipCodeMask = (value) => {
        if (!value) return ""
        value = value.replace(/\D/g, '')
        value = value.replace(/(\d{5})(\d)/, '$1-$2')
        return value
    }

    function ValidaCPF() {
        var RegraValida = document.getElementById("RegraValida").value;
        var cpfValido = /^(([0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2})|([0-9]{11}))$/;
        if (cpfValido.test(RegraValida) == true) {
            console.log("CPF Válido");
        } else {
            console.log("CPF Inválido");
        }
    }
    function fMasc(objeto, mascara) {
        obj = objeto
        masc = mascara
        setTimeout("fMascEx()", 1)
    }

    function fMascEx() {
        obj.value = masc(obj.value)
    }

    function mCPF(cpf) {
        cpf = cpf.replace(/\D/g, "")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d{1,2})$/, "$1-$2")
        return cpf
    }

    const handlePhone = (event) => {
        let input = event.target
        input.value = phoneMask(input.value)
    }

    const phoneMask = (value) => {
        if (!value) return ""
        value = value.replace(/\D/g, '')
        value = value.replace(/(\d{2})(\d)/, "($1) $2")
        value = value.replace(/(\d)(\d{4})$/, "$1-$2")
        return value
    }

    function limpa_formulário_cep() {
        //Limpa valores do formulário de cep.
        document.getElementById('rua').value = ("");
        document.getElementById('bairro').value = ("");
        document.getElementById('cidade').value = ("");
        document.getElementById('uf').value = ("");
        //document.getElementById('ibge').value = ("");
    }

    function meu_callback(conteudo) {
        if (!("erro" in conteudo)) {
            //Atualiza os campos com os valores.
            document.getElementById('rua').value = (conteudo.logradouro);
            document.getElementById('bairro').value = (conteudo.bairro);
            document.getElementById('cidade').value = (conteudo.localidade);
            document.getElementById('uf').value = (conteudo.uf);
            //document.getElementById('ibge').value = (conteudo.ibge);
        } //end if.
        else {
            //CEP não Encontrado.
            limpa_formulário_cep();
            alert("CEP não encontrado.");
        }
    }

    function pesquisacep(valor) {

        //Nova variável "cep" somente com dígitos.
        var cep = valor.replace(/\D/g, '');

        //Verifica se campo cep possui valor informado.
        if (cep != "") {

            //Expressão regular para validar o CEP.
            var validacep = /^[0-9]{8}$/;

            //Valida o formato do CEP.
            if (validacep.test(cep)) {

                //Preenche os campos com "..." enquanto consulta webservice.
                document.getElementById('rua').value = "carregando...";
                document.getElementById('bairro').value = "carregando...";
                document.getElementById('cidade').value = "carregando...";
                document.getElementById('uf').value = "carregando...";
                //document.getElementById('ibge').value = "...";

                //Cria um elemento javascript.
                var script = document.createElement('script');

                //Sincroniza com o callback.
                script.src = 'https://viacep.com.br/ws/' + cep + '/json/?callback=meu_callback';

                //Insere script no documento e carrega o conteúdo.
                document.body.appendChild(script);

            } //end if.
            else {
                //cep é inválido.
                limpa_formulário_cep();
                console.log("Formato de CEP inválido.");
            }
        } //end if.
        else {
            //cep sem valor, limpa formulário.
            limpa_formulário_cep();
        }
    };

    let senha = document.getElementById('senha');
    let senhaC = document.getElementById('senhaC');
    let senhaMatch = document.getElementById('senhaMatch');

    function validarSenha() {
        if (senha.value === senhaC.value) {
            senhaMatch.textContent = "As senhas coincidem.";
            senhaMatch.classList.add('text-success');
            senhaMatch.classList.remove('text-danger');
        } else {
            senhaMatch.textContent = "As senhas não coincidem.";
            senhaMatch.classList.add('text-danger');
            senhaMatch.classList.remove('text-success');
        }
    }

    // Verificar também quando o campo for modificado, para que a mensagem suma quando as senhas forem iguais
    senhaC.addEventListener('input', validarSenha);



    function scrollToSection(sectionId) {
        const section = document.getElementById(sectionId);
        if (section) {
            section.scrollIntoView({ behavior: 'smooth' });
        }
    }



</script>